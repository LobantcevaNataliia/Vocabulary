<Window x:Name="ListOfWordsWindow" x:Class="Vocabulary.ListOfWords"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vocabulary"
        mc:Ignorable="d"
        Title="ListOfWords" Height="400" Width="500" Loaded="Window_Loaded" Closed="ListOfWordsWindow_Closed">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF93F5DB" Offset="0"/>
                <GradientStop Color="#FFDBF9F1" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition Height="*" ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" ></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="New word - " HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Label Grid.Row="1" Grid.Column="0" Content="Transcription - " HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Label Grid.Row="2" Grid.Column="0" Content="Translation - " HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="newEnglishTb" Height="23" TextWrapping="Wrap" Text="" Margin="5,5"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="newTranscriptionTb" Height="23" TextWrapping="Wrap" Text="" Margin="5,5"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="newUkrainianTb" Height="23" TextWrapping="Wrap" Text="" Margin="5,5"/>
 
            </Grid>
            
            <Button  Grid.Column="1" x:Name="AddWord" Content="Add Word"  Click="AddWord_Click" Margin="15,15">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF44D3DA" Offset="0"/>
                            <GradientStop Color="#FF99FAFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
            </Button>
            <Button Grid.Column="2" x:Name="Settings" Content="Settings"  Click="Settings_Click"  Margin="15,15">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF44D3DA" Offset="0"/>
                            <GradientStop Color="#FF99FAFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
           </Button>
        </Grid>

        <DataGrid Grid.Row="1" Name="ListWords" AutoGenerateColumns="False" AlternatingRowBackground="#E6E6E6" RowBackground="#FFFFFF"
          HorizontalScrollBarVisibility="Disabled" CanUserSortColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding id}" Width="*"/>
                <DataGridTextColumn Header="Слово" Binding="{Binding english}" Width="*"/>
                <DataGridTextColumn Header="Транскрипція" Binding="{Binding transcription}" Width="*"/>
                <DataGridTextColumn Header="Переклад" Binding="{Binding ukrainian}" Width="*"/>
                <DataGridTextColumn Header="Статус вивчення" Binding="{Binding status}" Width="Auto"/>
            </DataGrid.Columns>

            <DataGrid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF93F5DB" Offset="0"/>
                    <GradientStop Color="#FFDBF9F1" Offset="1"/>
                </LinearGradientBrush>
            </DataGrid.Background>

        </DataGrid>

