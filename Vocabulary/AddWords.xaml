<Window x:Class="Vocabulary.AddWords"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vocabulary"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        x:Name="AddWordsWindow" Title="Add Words" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.4*" ></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#99ccff" Offset="0"/>
                <GradientStop Color="#ffcccc" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Grid.Row="0" Margin="10" Background="#FFFFCCCC" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="1.5*" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Enter a new word" Margin="10,0" FontSize="12" FontFamily="Engravers MT" Foreground="#FF208DF9"/>
            <TextBox Grid.Row="1" Grid.Column="1"  x:Name="newEnglishTb" SpellCheck.IsEnabled="True" Language="en-US" TextWrapping="Wrap" Margin="15,0" Padding="3" FontSize="14" FontFamily="Engravers MT" Foreground="#FF1883EE" VerticalAlignment="Center" TextAlignment="Center" />

            <Label Grid.Row="2" Grid.Column="0" Content="Enter the transcription of the word" Margin="10,0" FontSize="12" FontFamily="Engravers MT" Foreground="#FF208DF9"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="newTranscriptionTb"  TextWrapping="Wrap" Margin="15,0" Padding="3" FontSize="14" FontFamily="Engravers MT" Foreground="#FF1883EE" VerticalAlignment="Center" TextAlignment="Center"   />

            <Label Grid.Row="4" Grid.Column="0" Content="Enter the translation of the word" Margin="10,0" FontSize="12" FontFamily="Engravers MT" Foreground="#FF208DF9"/>
            <TextBox Grid.Row="5" Grid.Column="1" x:Name="newUkrainianTb"  SpellCheck.IsEnabled="True" Language="uk-UA" TextWrapping="Wrap" Margin="15,0" Padding="3" FontSize="14" FontFamily="Engravers MT"  Foreground="#FF1883EE" TextAlignment="Center" VerticalAlignment="Center" />

            <Button  Grid.Row="6" Grid.ColumnSpan="2" x:Name="AddWord" Content="Add Word" Click="AddWord_Click" FontSize="20" FontFamily="Engravers MT" Background="{x:Null}" Foreground="#FF208DF9" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            
        </Grid>
        <StackPanel Grid.Row="1" Margin="10,0,10,5" >
            <Label FontWeight="Bold" Content="Chose which words your want add" HorizontalAlignment="Left" Foreground="#FF1883EE" />
            <CheckBox Content="Thousand of the most used English words"  Foreground="#FF1883EE" />
            <CheckBox Content="The second thousand most used English words" Foreground="#FF1883EE"/>
            <CheckBox Content="The third thousand most used English words" Foreground="#FF1883EE"/>
        </StackPanel>
    </Grid>
</Window>
